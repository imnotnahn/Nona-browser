<Application x:Class="Nona.App.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Nona.App"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ModernStyles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <!-- Legacy brushes for compatibility -->
            <SolidColorBrush x:Key="AccentBrush" Color="#FF0078D4"/>
            <SolidColorBrush x:Key="BackgroundBrush" Color="#FF1E1E1E"/>
            <SolidColorBrush x:Key="ForegroundBrush" Color="#FFFFFFFF"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
