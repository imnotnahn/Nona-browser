<Window x:Class="Nona.App.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings" Height="700" Width="1000" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundColor}">
  <Grid>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="220"/>
      <ColumnDefinition Width="*"/>
    </Grid.ColumnDefinitions>
    
    <!-- Sidebar -->
    <Border Grid.Column="0" Background="{DynamicResource MenuColor}" BorderBrush="{DynamicResource WindowBorderColor}" BorderThickness="0,0,1,0">
      <ListBox x:Name="Sidebar" SelectionChanged="Sidebar_SelectionChanged" 
               Background="Transparent" BorderThickness="0"
               Foreground="{DynamicResource ForegroundColor}">
        <ListBoxItem Padding="16,12">
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="●" FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center" 
                       Foreground="{DynamicResource AccentColor}"/>
            <TextBlock Text="General" VerticalAlignment="Center"
                       Foreground="{DynamicResource ForegroundColor}"/>
          </StackPanel>
        </ListBoxItem>
        <ListBoxItem Padding="16,12">
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="●" FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center"
                       Foreground="{DynamicResource AccentColor}"/>
            <TextBlock Text="Privacy &amp; Security" VerticalAlignment="Center"
                       Foreground="{DynamicResource ForegroundColor}"/>
          </StackPanel>
        </ListBoxItem>
        <ListBoxItem Padding="16,12">
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="●" FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center"
                       Foreground="{DynamicResource AccentColor}"/>
            <TextBlock Text="Appearance" VerticalAlignment="Center"
                       Foreground="{DynamicResource ForegroundColor}"/>
          </StackPanel>
        </ListBoxItem>
        <ListBoxItem Padding="16,12">
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="●" FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center"
                       Foreground="{DynamicResource AccentColor}"/>
            <TextBlock Text="Advanced Theme" VerticalAlignment="Center"
                       Foreground="{DynamicResource ForegroundColor}"/>
          </StackPanel>
        </ListBoxItem>
        <ListBoxItem Padding="16,12">
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="●" FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center"
                       Foreground="{DynamicResource AccentColor}"/>
            <TextBlock Text="Downloads" VerticalAlignment="Center"
                       Foreground="{DynamicResource ForegroundColor}"/>
          </StackPanel>
        </ListBoxItem>
        <ListBoxItem Padding="16,12">
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="●" FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center"
                       Foreground="{DynamicResource AccentColor}"/>
            <TextBlock Text="Keyboard Shortcuts" VerticalAlignment="Center"
                       Foreground="{DynamicResource ForegroundColor}"/>
          </StackPanel>
        </ListBoxItem>
        <ListBoxItem Padding="16,12">
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="●" FontSize="12" Margin="0,0,8,0" VerticalAlignment="Center"
                       Foreground="{DynamicResource AccentColor}"/>
            <TextBlock Text="About" VerticalAlignment="Center"
                       Foreground="{DynamicResource ForegroundColor}"/>
          </StackPanel>
        </ListBoxItem>
      </ListBox>
    </Border>
    
    <!-- Content Area -->
    <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" Margin="20">
      <ContentControl x:Name="ContentHost"/>
    </ScrollViewer>
    
    <!-- Action Buttons -->
    <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="20">
      <Button x:Name="ApplyButton" Content="Apply" Width="80" Height="32" Margin="0,0,10,0" Click="Apply_Click"
              Style="{DynamicResource ModernButtonStyle}"/>
      <Button x:Name="OkButton" Content="OK" Width="80" Height="32" Margin="0,0,10,0" Click="Ok_Click"
              Style="{DynamicResource AccentButtonStyle}"/>
      <Button x:Name="CancelButton" Content="Cancel" Width="80" Height="32" Click="Cancel_Click"
              Style="{DynamicResource ModernButtonStyle}"/>
    </StackPanel>
  </Grid>
</Window>

