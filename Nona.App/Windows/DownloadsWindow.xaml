<Window x:Class="Nona.App.Windows.DownloadsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Downloads" Height="400" Width="700" WindowStartupLocation="CenterOwner"
        Background="{DynamicResource BackgroundColor}">
  <Grid Margin="20">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    
    <TextBlock Grid.Row="0" Text="Downloads" FontSize="18" FontWeight="Bold" 
               Foreground="{DynamicResource ForegroundColor}" Margin="0,0,0,20"/>
    
    <DataGrid x:Name="Grid" Grid.Row="1" AutoGenerateColumns="False" IsReadOnly="True"
              Background="{DynamicResource BackgroundColor}"
              Foreground="{DynamicResource ForegroundColor}"
              BorderBrush="{DynamicResource WindowBorderColor}"
              BorderThickness="1"
              GridLinesVisibility="Horizontal"
              HeadersVisibility="Column">
      <DataGrid.Columns>
        <DataGridTextColumn Header="File" Binding="{Binding FilePath}" Width="*"/>
        <DataGridTextColumn Header="State" Binding="{Binding State}" Width="100"/>
        <DataGridTextColumn Header="Received" Binding="{Binding BytesReceived}" Width="120"/>
        <DataGridTextColumn Header="Total" Binding="{Binding TotalBytes}" Width="120"/>
      </DataGrid.Columns>
    </DataGrid>
    
    <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
      <Button Content="Open Folder" Margin="0,0,10,0" Click="OpenFolder_Click" Style="{DynamicResource ModernButtonStyle}"/>
      <Button Content="Close" Click="Close_Click" Style="{DynamicResource ModernButtonStyle}"/>
    </StackPanel>
  </Grid>
</Window>

